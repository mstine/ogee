		<dependencySet>
			<includes>
				<include>org.ops4j.pax.runner:pax-runner-assembly</include>
			</includes>
			<outputDirectory>.</outputDirectory>
			<unpack>true</unpack>
			<useTransitiveDependencies>false</useTransitiveDependencies>
